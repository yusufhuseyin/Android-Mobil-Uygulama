<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="25dp"
    app:cardElevation="15dp"
    app:contentPadding="8dp">
    
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:id="@+id/kullanici_item_imgKullaniciProfil"
        app:civ_border_width="3dp"
        app:civ_border_color="@color/black"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:id="@+id/kullanici_item_imgOnline"
        android:layout_alignTop="@+id/kullanici_item_imgKullaniciProfil"
        android:layout_alignRight="@+id/kullanici_item_imgKullaniciProfil"
        android:layout_height="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:textSize="17sp"
        android:layout_toStartOf="@id/Kullanici_item_imgSagYon"
        android:layout_toEndOf="@id/kullanici_item_imgKullaniciProfil"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:id="@+id/kullanici_item_txtKullaniciIsim"
        android:textStyle="bold"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/Kullanici_item_imgSagYon"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_sag_yon"/>

</RelativeLayout>
</androidx.cardview.widget.CardView>