<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginLeft="3dp"
        android:id="@+id/chat_item_imgProfil"
        app:civ_border_width="2dp"
        app:civ_border_color="#094942"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="3dp"
        android:padding="8dp"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@color/chatBgTextColor"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/chat_item_imgProfil"
        android:background="@drawable/chat_item_bg_left"
        android:id="@+id/chat_item_txtMesaj"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_width="200dp"
        android:padding="8dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="2dp"
        android:id="@+id/chat_item_imgResim"
        android:background="@drawable/chat_item_bg_left"
        android:layout_alignTop="@+id/chat_item_imgProfil"
        android:layout_toRightOf="@+id/chat_item_imgProfil"
        android:layout_height="200dp"/>

    <ProgressBar
        android:layout_width="50dp"
        android:layout_alignRight="@+id/chat_item_imgResim"
        android:layout_alignLeft="@+id/chat_item_imgResim"
        android:layout_centerVertical="true"
        android:id="@+id/chat_item_progress"
        android:indeterminate="true"
        android:indeterminateTint="@color/black"
        android:layout_height="50dp"/>

</RelativeLayout>